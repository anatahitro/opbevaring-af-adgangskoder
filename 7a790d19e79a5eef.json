{
  "code": "<template>\n  <main class=\"container mx-auto p-4 lg:p-8\">\n    <div v-if=\"isLoading\" class=\"text-center py-20 text-text-muted\">\n      <i class=\"fa-solid fa-spinner fa-spin fa-2x\"></i>\n    </div>\n    <div v-else-if=\"error\" class=\"text-center py-20 text-text-muted\">\n      <p>{{ error }}</p>\n    </div>\n    <div v-else-if=\"paste\" class=\"space-y-6\">\n      <div class=\"bg-surface border border-outline rounded-lg p-4 sm:p-6\">\n        <div class=\"flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4\">\n          <h1 class=\"text-2xl font-bold break-words\">{{ paste.title }}</h1>\n          <div class=\"flex items-center gap-2 flex-shrink-0\">\n            <a :href=\"rawUrl\" target=\"_blank\" class=\"px-3 py-1.5 text-xs font-semibold rounded-md border border-outline hover:border-primary hover:bg-primary/5 transition-colors\">Raw</a>\n            <button class=\"px-3 py-1.5 text-xs font-semibold rounded-md border border-outline hover:border-primary hover:bg-primary/5 transition-colors\">Download</button>\n          </div>\n        </div>\n        <div class=\"flex items-center flex-wrap gap-x-4 gap-y-1 text-sm text-text-muted mt-2\">\n          <span class=\"flex items-center gap-1.5\"><i class=\"fa-regular fa-user w-4 text-center\"></i>{{ paste.owner }}</span>\n          <span class=\"flex items-center gap-1.5\"><i class=\"fa-regular fa-calendar w-4 text-center\"></i>{{ new Date(paste.createdAt).toLocaleDateString() }}</span>\n          <span class=\"flex items-center gap-1.5\"><i class=\"fa-regular fa-eye w-4 text-center\"></i>{{ paste.views }} views</span>\n        </div>\n      </div>\n      <div class=\"bg-surface border border-outline rounded-lg\">\n        <div class=\"px-4 py-3 border-b border-outline text-sm text-text-muted font-mono\">\n          {{ paste.syntax }}\n        </div>\n        <pre class=\"overflow-x-auto whitespace-pre-wrap break-words\"><code ref=\"codeBlock\" :class=\"`language-${paste.syntax}`\">{{ paste.code }}</code></pre>\n      </div>\n    </div>\n  </main>\n</template>\n\n<script setup>\nimport { ref, onMounted, nextTick, computed } from 'vue';\nimport { useRoute, useRouter } from 'vue-router';\nimport axios from 'axios';\n\nconst props = defineProps({ id: String, username: String, slug: String });\nconst router = useRouter();\nconst paste = ref(null);\nconst codeBlock = ref(null);\nconst isLoading = ref(true);\nconst error = ref('');\n\nconst rawUrl = computed(() => paste.value ? `/api/pastes/${paste.value.id}/raw` : '#');\n\nconst fetchPasteById = async (pasteId) => {\n    try {\n        const { data } = await axios.get(`/api/pastes/${pasteId}`);\n        paste.value = data;\n        router.replace({ name: 'paste-by-slug', params: { username: data.owner, slug: data.slug }, replace: true });\n        await nextTick();\n        if (codeBlock.value && window.hljs) { window.hljs.highlightElement(codeBlock.value); }\n    } catch (err) {\n        error.value = err.response?.data?.message || \"Could not load paste.\";\n    } finally {\n        isLoading.value = false;\n    }\n};\n\nonMounted(() => { if (props.id) { fetchPasteById(props.id); } });\n</script>",
